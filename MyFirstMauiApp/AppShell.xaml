<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyFirstMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyFirstMauiApp"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <Tab Title="Main Page" Icon="dotnet_bot.png">
            <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="dotnet_bot.png"
            Route="MainPage" />
        </Tab>
        <Tab Title="LayoutExample">
            <ShellContent
            Title="LayoutExample"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:LayourExample}"
            Route="LayourExample" />
        </Tab>
        <Tab Title="3">
            <ShellContent
            Title="ControlsC#"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:ControlsCs}"
            Route="ControlsCs" />
        </Tab>
        <Tab Title="4">
            <ShellContent
            Title="ControlsXaml"
            ContentTemplate="{DataTemplate local:ControlsXaml}"
            Route="ControlsXaml" />
        </Tab>
    </TabBar>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="dotnet_bot.png"
        Route="MainPage" />
    <ShellContent
        Title="LayoutExample"
        Icon="dotnet_bot.png"
        ContentTemplate="{DataTemplate local:LayourExample}"
        Route="LayourExample" />
    <ShellContent
        Title="ControlsC#"
        Icon="dotnet_bot.png"
        ContentTemplate="{DataTemplate local:ControlsCs}"
        Route="ControlsCs" />
    <ShellContent
        Title="ControlsXaml"
        ContentTemplate="{DataTemplate local:ControlsXaml}"
        Route="ControlsXaml" />

</Shell>
